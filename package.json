{
  "openapi": "3.0.1",
  "info": {
    "title": "CRUD API with MongoDB",
    "description": "API Documentation for MongoDB CRUD Operations",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8081",
